# Environment Configuration for Liberty Ridge Training Grounds
# Copy this file to .env.local and update with your actual values

# Firebase Configuration
FIREBASE_API_KEY=your-api-key-here
FIREBASE_AUTH_DOMAIN=liberty-ridge-training.firebaseapp.com
FIREBASE_PROJECT_ID=liberty-ridge-training
FIREBASE_STORAGE_BUCKET=liberty-ridge-training.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# HighLevel CRM Integration
HIGHLEVEL_API_KEY=your-highlevel-api-key
HIGHLEVEL_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your-webhook-id/

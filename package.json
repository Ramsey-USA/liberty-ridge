{
  "name": "liberty-ridge",
  "version": "1.0.0",
  "description": "Liberty Ridge Training Grounds LLC - Tactical training course website",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "export": "next build && next export",
    "deploy": "npm run build && npx firebase deploy",
    "deploy:script": "./deploy.sh",
    "firebase:init": "npx firebase init",
    "firebase:deploy": "npx firebase deploy",
    "firebase:serve": "npx firebase serve",
    "firebase:login": "npx firebase login",
    "lint:md": "markdownlint docs/*.md",
    "lint:md:fix": "markdownlint docs/*.md --fix",
    "create:md": "./scripts/create-md-file.sh",
    "fix:md": "./scripts/fix-md-lint.sh",
    "optimize": "./scripts/quick-optimize.sh",
    "build:analyze": "ANALYZE=true npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "test:performance": "lighthouse http://localhost:3000 --view",
    "check:bundle": "npx @next/bundle-analyzer",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\" --ignore-unknown",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "tactical",
    "training",
    "firearms",
    "self-defense"
  ],
  "author": "Matt Ramsey",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.25",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.3",
    "firebase": "^12.2.1",
    "next": "^15.5.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.4",
    "firebase-tools": "^14.16.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "markdownlint-cli": "^0.45.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  }
}

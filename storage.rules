rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Gallery images and videos - public read, admin write
    match /gallery/{allPaths=**} {
      allow read: if true; // Public read access for gallery content
      allow write: if request.auth != null; // Allow authenticated admin users to upload
      allow delete: if request.auth != null; // Allow authenticated admin users to delete
    }

    // All other files - admin only
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
